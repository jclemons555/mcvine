<?xml version="1.0"?>

<!DOCTYPE SampleAssembly>

<SampleAssembly 
    name="Ni" 
    max_multiplescattering_loops_among_scatterers="2"
    max_multiplescattering_loops_interactM_path1="3"
    >
  
  <PowderSample name='Ni' type='sample'>
    <Shape>
      <cylinder radius="2*cm" height="10*cm" />
    </Shape>
    <Phase type="crystal">
      <ChemicalFormula>Ni</ChemicalFormula>
      <xyzfile>Ni.xyz</xyzfile>
    </Phase>
  </PowderSample>
  
  <PowderSample name="Al-can" type="sample">
    <Shape>
      <hollowCylinder in_radius="2.001*cm" out_radius="3*cm" height="10*cm" />
    </Shape>
    <Phase type="crystal">
      <ChemicalFormula>Al</ChemicalFormula>
      <xyzfile>Al.xyz</xyzfile>
    </Phase>
  </PowderSample>

  <LocalGeometer registry-coordinate-system="InstrumentScientist">
    <Register name="Ni" position="(0,0,0)" orientation="(0,0,0)"/>
    <Register name="Al-can" position="(0,0,0)" orientation="(0,0,0)"/>
  </LocalGeometer>

</SampleAssembly>
