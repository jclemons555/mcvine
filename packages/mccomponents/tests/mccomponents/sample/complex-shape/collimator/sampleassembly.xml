<?xml version="1.0"?>

<!DOCTYPE SampleAssembly [
<!ENTITY shape SYSTEM "collimator_shape.xml">
]>

<SampleAssembly name="X">
  
  <PowderSample name="X" type="sample">
    <Shape>&shape;</Shape>
    <Phase type="crystal">
      <ChemicalFormula>Al</ChemicalFormula>
      <xyzfile>Al.xyz</xyzfile>
    </Phase>
  </PowderSample>
  
  <LocalGeometer registry-coordinate-system="InstrumentScientist">
    <Register name="X" position="(0,0,0)" orientation="(0,0,0)"/>
  </LocalGeometer>

  <Environment temperature="300*K"/>

</SampleAssembly>
