module load python27
module load openmpi-x86_64
export PYTHONPATH=$HOME/fermi/mcvine/deps/lib/python2.7/site-packages/
export BOOST_ROOT=/usr
export BOOST_INCLUDEDIR=/usr/include
export BOOST_LIBRARYDIR=/usr/lib54

export PYTHONPATH=$HOME/fermi/mcvine/deps/lib/python2.7/site-packages/:$PYTHONPATH

# this is necessary because mcstas components generation
# need the preliminary installation of mcvine to work,
# which also need the danse software to work
MCVINE_DIR=$HOME/fermi/mcvine/export
export PYTHONPATH=$MCVINE_DIR/lib64/python2.7/site-packages:$PYTHONPATH
export PATH=$MCVINE_DIR/bin:$PATH
export LD_LIBRARY_PATH=$MCVINE_DIR/lib64:$LD_LIBRARY_PATH

# aliases for convenience
alias mm="cmake ../mcvine && make -j 30 && make install -j 30"
alias mt='env CTEST_OUTPUT_ON_FAILURE=1 make test ARGS="-j30"'

